<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <!-- Add your deployment description here -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>at.ac.tuwien.big.we16.ue2.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailServlet</servlet-name>
        <servlet-class>at.ac.tuwien.big.we16.ue2.DetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BidServlet</servlet-name>
        <servlet-class>at.ac.tuwien.big.we16.ue2.BidServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BidServlet</servlet-name>
        <url-pattern>/BidServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailServlet</servlet-name>
        <url-pattern>/DetailServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/views/login.jsp</welcome-file>
    </welcome-file-list>

</web-app>